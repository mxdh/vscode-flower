{
    "name": "flower",
    "displayName": "野花鼓励师",
    "description": "写代码不再孤单，有野花与你同在",
    "version": "0.0.3",
    "publisher": "mxdh",
    "icon": "logo.jpg",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "野花",
        "提醒",
        "鼓励"
    ],
    "bugs": {
        "url": "https://github.com/mxdh/vscode-flower/issues",
        "email": "a27573@outlook.com"
    },
    "homepage": "https://github.com/mxdh/vscode-flower/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/mxdh/vscode-flower.git"
    },
    "activationEvents": [
        "onCommand:flower.showReminderView",
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "flower.showReminderView",
                "title": "打开提醒页面",
                "category": "flower"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "野花",
            "properties": {
                "flower.reminderViewIntervalInMinutes": {
                    "type": "number",
                    "default": 30,
                    "description": "展示提醒页面的时间间隔（分钟）（重新加载窗口后起效）"
                },
                "flower.name": {
                    "type": "string",
                    "default": "野花",
                    "description": "窗口标题"
                },
                "flower.title": {
                    "type": "string",
                    "default": "又无聊啦？",
                    "description": "页面内展示文字"
                },
                "flower.type": {
                    "type": "string",
                    "default": "default",
                    "description": "类型：default:默认图；url：网络图"
                },
                "flower.customImages": {
                    "type": "array",
                    "default": [
                        "https://github.io/mxdh/vscode-flower/image/flower/01.jpg"
                    ],
                    "description": "用户设置图片地址"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.48",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5",
        "vscode": "^1.1.34"
    }
}